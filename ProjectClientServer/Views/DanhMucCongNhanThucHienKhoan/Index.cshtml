@model IEnumerable<ProjectClientServer.Model.DanhMucCongNhanThucHienKhoan>

@{
    ViewBag.Title = "Danh sách danh mục thực hiện khoán";
}

<h2>Danh sách danh mục thực hiện khoán</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", "DanhMucCongNhanThucHienKhoanController", new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.SoLuong)*@
            Số lượng
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.LaKhoanChung)*@
            Là khoán chung
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LaKhoanChung)
            </td>
            <td>
                <a href="~/DanhMucCongNhanThucHienKhoan/Edit/@item.MaDanhMucCNTHK"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                <a href="~/DanhMucCongNhanThucHienKhoan/Details/@item.MaDanhMucCNTHK"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                <a href="~/DanhMucCongNhanThucHienKhoan/Delete/@item.MaDanhMucCNTHK"><i class="fa fa-trash-o" aria-hidden="true"></i></a>

                @*@Html.ActionLink("Edit", "Edit", new { id = item.MaDanhMucCNTHK }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaDanhMucCNTHK }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaDanhMucCNTHK })*@
            </td>
        </tr>
    }

</table>
