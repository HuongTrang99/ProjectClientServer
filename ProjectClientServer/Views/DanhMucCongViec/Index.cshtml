@model IEnumerable<ProjectClientServer.Model.DanhMucCongViec>

@{
    ViewBag.Title = "Danh mục công việc";
}

<h2>Danh mục công việc</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", "DanhMucCongViecController", new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.CongViec.TenCongViec)*@
            Tên công việc
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SanPham.TenSanPham)*@
            Tên sản phẩm
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SoLuongDatDuoc)*@
            Số lượng đạt được
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SoLoSanPham)*@
            Số lô sản phẩm
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CongViec.TenCongViec)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SanPham.TenSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuongDatDuoc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLoSanPham)
            </td>
            <td>
                <a href="~/DanhMucCongViec/Edit/@item.MaDanhMucCongViec"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                <a href="~/DanhMucCongViec/Details/@item.MaDanhMucCongViec"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                <a href="~/DanhMucCongViec/Delete/@item.MaDanhMucCongViec"><i class="fa fa-trash-o" aria-hidden="true"></i></a>

                @*@Html.ActionLink("Edit", "Edit", new { id=item.MaDanhMucCongViec }) |
                    @Html.ActionLink("Details", "Details", new { id=item.MaDanhMucCongViec }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.MaDanhMucCongViec })*@
            </td>
        </tr>
    }

</table>
