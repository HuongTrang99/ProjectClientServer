@model IEnumerable<ProjectClientServer.Model.SanPham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<h2>Danh sách sản phẩm</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create", "SanPhamController", new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @*@Html.DisplayNameFor(model => model.TenSanPham)*@
            Tên sản phẩm
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.SoDangKy)*@
            Số đăng ký
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.HanSuDung)*@
            Hạn sử dụng
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.QuyCach)*@
            Quy cách
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.NgayDangKy)*@
            Ngày đăng ký
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSanPham)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoDangKy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HanSuDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuyCach)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayDangKy)
            </td>
            <td>

                <a href="~/SanPham/Edit/@item.MaSanPham"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                <a href="~/SanPham/Details/@item.MaSanPham"><i class="fa fa-info-circle" aria-hidden="true"></i></a>
                <a href="~/SanPham/Delete/@item.MaSanPham"><i class="fa fa-trash-o" aria-hidden="true"></i></a>

                @*@Html.ActionLink("Edit", "Edit", new { id=item.MaSanPham }) |
                    @Html.ActionLink("Details", "Details", new { id=item.MaSanPham }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.MaSanPham })*@
            </td>
        </tr>
    }

</table>
